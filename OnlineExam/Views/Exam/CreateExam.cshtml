@model Exam
@{
    ViewData["Title"] = "Create Exam";
    Layout = "~/Views/Shared/_SideNavBar.cshtml";
}

<form method="post" id="exam-form">
    <div class="container">
        <p>Create New Exam</p>
        <div class="exam-container">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Duration"></label>
                <input asp-for="Duration" class="form-control" required type="number" min="10" />
            </div>
            <div class="form-group">
                <label asp-for="StartTime"></label>
                <input asp-for="StartTime" class="form-control" required />
            </div>
            <button id="my-btn" type="submit" class="btn btn-primary">Save</button>

        </div>
    </div>
</form>

<style>
    .container {
        display: flex;
        justify-content: center;
        flex-wrap: nowrap;
        flex-direction: column;
        align-items: center;
        margin-top: 42px;
        max-width: 95%;
    }

    .exam-container {
        padding: 16px 16px 16px 32px;
        margin-left: 32px;
        background: #D9D9D9;
        border-radius: 18px;
        margin-bottom: 24px;
        width: 80%;
        gap: 10px;
        display: flex;
        flex-direction: column;
    }

    .container p {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 20px;
    }
</style>

<script>
    const form = document.querySelector('#exam-form');
    const myButton = document.querySelector('#my-btn');
    myButton.addEventListener('click', (event) => {
        const now = new Date();
        const startTimeInput = document.querySelector('#StartTime');
        const startTime = new Date(startTimeInput.value);
        if (startTime <= now) {
            event.preventDefault(); // Prevent the form from submitting
            alert('Please enter a start time after the current time.'); // Show an alert message
            return;
        }
    });
</script>