@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model ListOfQAndExamId

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.4.0/css/all.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.0.0/css/all.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

</head>
<body onload="Add_pre()">

    <div class="sidebar">
     
        <div class="container-header">
            <h3>Exam Settings</h3>
        </div>
        <div class="container-subHeader">
            <p>Questions</p>
         </div>
       
        <table id="itemsTable" class="items-table">
            <thead>
                <tr>
                </tr>
             

            </thead>
        </table>
        <a asp-controller="Exam" asp-action="CreateQuestion" asp-route-Id="@Model.Id" 
        class="btn btn-primary" onclick="addItem()" style="margin-left:52px;">Create Question</a>

        <div></div>
        <div class="container-subHeader">
            <p>Exam Date: </p>
            <p></p>
        </div>
        <div class="container-subHeader">
            <p>Exam Code: </p>
            <p></p>
        </div>
    </div>
    <div class="cont">
        @RenderBody()
    </div>

    <script>
        var counter = 0; // Counter for number of items in current row
        var cnt = 1;
       
     
        function addItem() {
            // Create a new row in the table if current row is full
            var table = document.getElementById("itemsTable");
            if (counter == 4 || table.rows.length == 0) {
                var row = table.insertRow();
                counter = 0;
            } else {
                var row = table.rows[table.rows.length - 1];
            }
            // Insert the item name into the new cell
            var cell = row.insertCell();
            
            cell.innerHTML = `<p class="number-of-exam">`+cnt+`</p>`;
            // Increment the counter
            cnt++;
            counter++;
        };
        function Add_pre() {
            var model = @Html.Raw(Json.Serialize(Model.questions));
            for (let i = 0; i < model.length; i++) {
                addItem();
            }
        };

    </script>

    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Open+Sans&display=swap');

        * {
            list-style: none;
            text-decoration: none;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Open Sans', sans-serif;
        }

        body {
            background: white;
        }

        .cont {
            float: left;
            width: 82%;
        }

        .sidebar {
            background: #D9D9D9;
            position: fixed;
            position: fixed;
            top: 0;
            right: 0;
            float: right;
            width: 18%;
            height: 100%;
            padding: 20px 0;
            transition: all 0.5s ease;
        }
        .container-subHeader{
            display: flex;
            justify-content: center;
            align-items: center;
            background: white;
            margin-top: 16px;
            padding: 12px;
            margin-left:1px;
        }
        .container-subHeader p{
                font-size: 16px;
                font-weight: bolder;
                margin: 0;
         }

        .container-header {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .sidebar h3 {
            color: black;
            margin: 10px 0 5px;
            font-weight: 600;
        }

        .items-table{
            width:100%;
        }

        .items-table td {
            padding: 8px;
            background: #00A607;
            color: white;
            border-radius: 12px 0px 0px 0px;
            align-items: center;
            display: inline-flex;
            width: 30px;
        }
        .items-table tr{
            margin-left: 12px;
            gap: 24px;
            display: flex;
            padding: 12px;
        }
       .number-of-exam{
          margin:0px;
       }
       
    </style>

</body>

</html>